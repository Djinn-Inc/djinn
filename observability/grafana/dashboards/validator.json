{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Validator Instances Up",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        { "expr": "count(up{job=~\"validator.*\"} == 1)", "legendFormat": "up" }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 7 },
              { "color": "green", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "title": "Shares Stored (Rate)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        { "expr": "sum(rate(djinn_validator_shares_stored_total[5m]))", "legendFormat": "shares/s" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "title": "Active MPC Sessions",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        { "expr": "sum(djinn_validator_mpc_active_sessions)", "legendFormat": "active" }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "title": "Rate Limit Rejections (1h)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        { "expr": "sum(increase(djinn_validator_rate_limit_rejections_total[1h]))", "legendFormat": "rejections" }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      }
    },
    {
      "title": "Request Rate by Endpoint",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(djinn_validator_requests_total{instance=~\"$instance\"}[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "title": "Request Latency by Endpoint",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(djinn_validator_request_latency_seconds_bucket{instance=~\"$instance\"}[5m])) by (le, endpoint))",
          "legendFormat": "p95 {{endpoint}}"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(djinn_validator_request_latency_seconds_bucket{instance=~\"$instance\"}[5m])) by (le, endpoint))",
          "legendFormat": "p50 {{endpoint}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "Purchase Results",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "sum(rate(djinn_validator_purchases_processed_total{instance=~\"$instance\"}[5m])) by (result)",
          "legendFormat": "{{result}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "fillOpacity": 20 } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "available" }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "unavailable" }, "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "error" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "payment_required" }, "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "title": "MPC Duration",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(djinn_validator_mpc_duration_seconds_bucket{instance=~\"$instance\"}[5m])) by (le, mode))",
          "legendFormat": "p99 {{mode}}"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(djinn_validator_mpc_duration_seconds_bucket{instance=~\"$instance\"}[5m])) by (le, mode))",
          "legendFormat": "p95 {{mode}}"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(djinn_validator_mpc_duration_seconds_bucket{instance=~\"$instance\"}[5m])) by (le, mode))",
          "legendFormat": "p50 {{mode}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "MPC Sessions by Mode",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "sum(rate(djinn_validator_mpc_sessions_total{instance=~\"$instance\"}[5m])) by (mode)",
          "legendFormat": "{{mode}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 20 } } }
    },
    {
      "title": "MPC Errors by Reason",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        {
          "expr": "sum(rate(djinn_validator_mpc_errors_total{instance=~\"$instance\"}[5m])) by (reason)",
          "legendFormat": "{{reason}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "fillOpacity": 20 } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "timeout" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "mac_failure" }, "properties": [{ "id": "color", "value": { "fixedColor": "dark-red", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "title": "Active Shares per Instance",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "djinn_validator_active_shares{instance=~\"$instance\"}",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "title": "Outcomes Attested",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "targets": [
        {
          "expr": "sum(djinn_validator_outcomes_attested_total{instance=~\"$instance\"}) by (outcome)",
          "legendFormat": "{{outcome}}"
        }
      ]
    },
    {
      "title": "Circuit Breaker Status",
      "type": "state-timeline",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 36 },
      "targets": [
        {
          "expr": "djinn_validator_circuit_breaker_open{instance=~\"$instance\"}",
          "legendFormat": "{{instance}} {{target}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Closed" }, "1": { "text": "Open" } } }
          ]
        }
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["djinn", "validator"],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "query": "label_values(up{job=~\"validator.*\"}, instance)",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "refresh": 2
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Djinn Validators",
  "uid": "djinn-validators"
}
